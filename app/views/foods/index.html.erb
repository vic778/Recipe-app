 <%= render "partials/nav" %>
    
    <section >
      <div>
        <%= link_to 'foods/new', :remote => true do %>
          <input type="button" class="btn btn-primary" value="Add Food">
        <% end %>
      </div>

      <div>
        <table class>
        <tr>
          <th>Food</th>
          <th>Measurement Unit</th>
          <th>Unit Price</th>
          <th>Action</th>
        </tr>

        <% @foods.each do |food| %>
        <% if can? :manage, food %>
          <tr>
            <td><%=food.name%></td>
            <td><%=food.measurement_unit%></td>
            <td><%=food.price%>$</td>
           
            <td>
            <% if current_user == food.user %>
           
               <%= button_to "Delete", food_path(food.id), html: {'data-turbo' => "true"}, :method => :delete, class: "btn btn-warning" %>
               <% end %>
            </td>
             
          </tr>
          
          <% end %>
        <% end %>

        </table>
      </div>
    </section>