
    <%= render "partials/nav" %>
     <h1 class="heading">Public Recipes</h1>

    <% @recipes.each do |recipe| %>

    <div class= "recipe-border equal">

      <div>
      <%= link_to recipe_path(recipe.id), :remote => true do %>
        <h2><%=recipe.name%></h2>
        <%end%>
        <h4>By: <%=recipe.user.name%></h4>
      </div>
      <div>
        <h4>Total food Items: <%=Recipe.items(recipe.id)%></h4>
        <h4>Total Price: $<%=Recipe.total_value(recipe.id)%></h4>
      </div>
    </div>

    <% end %>
